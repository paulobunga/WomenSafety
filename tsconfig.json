{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "utils": ["./src/utils"],
      "config": ["./config"],
      "components": ["./src/components"],
      "containers": ["./src/containers"],
      "packages": ["./src/packages"],
      "screens": ["./src/screens"],
      "navigation": ["./src/navigation"],
      "assets": ["./src/assets"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
